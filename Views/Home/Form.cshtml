@model TPLOCAL1.Models.PersonalInformation
    @{
        ViewData["Title"] = "FORM";
        ViewData["h1"] = "Form TP HN opinion";
        ViewData["Link1"] = "/Home/Index";
        ViewData["Link2"] = "/Home/Index/List";
        ViewData["linkTitle1"] = "Welcome Page";
        ViewData["linkTitle2"] = "Avis List";
    }
    <section class="form">
        <form asp-action="ValidationFormulaire">
            @* @Html.ValidationSummary(false,"") *@
    <table>
            <caption>Personal Information</caption>
        <tr>
            <th>Name</th>
            <td>               
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Forename</th>
            <td>
                <input asp-for="Forename" class="form-control" />
                <span asp-validation-for="Forename" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>
                <select asp-for="Gender" asp-items="Model.Genders"></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Address</th>
            <td>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Zip Code</th>
            <td>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Town</th>
            <td>
                <input asp-for="Town" class="form-control" />
                <span asp-validation-for="Town" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Email Address</th>
            <td>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </td>
        </tr>       
    </table>
    <table>
        <caption>Following Formation's Information</caption>
        <tr>
            <th>Formation Debut Date</th>
            <td>
                <input asp-for="StartDateTraining" class="form-control" />
                <span asp-validation-for="StartDateTraining" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Following Formation</th>
            <td>
                <input asp-for="TypeTraining" class="form-control" />
                <span asp-validation-for="TypeTraining" class="text-danger"></span>
            </td>
        </tr>
    </table>
    <table>
        <caption>Opinion on Formations</caption>
        <tr>
            <th>Formation COBOL</th>
            <td>
                <input asp-for="CobolTraining" class="form-control" />
                <span asp-validation-for="CobolTraining" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Formation C#</th>
            <td>
                <input asp-for="TrainingPurpose" class="form-control" />
                <span asp-validation-for="TrainingPurpose" class="text-danger"></span>
            </td>
        </tr>
    </table>

    <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
            
    </form>
    </section>
